@model batNotes.Models.UserListViewModel
@{
    ViewBag.Title = "Список пользователей";
}

<h2>Список пользователей</h2>

<table>

    <tr>
        <td>ID</td>
        <td>Login</td>
    </tr>
    @foreach (var user in Model.Users)
    {
         <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
             <td>@user.Status</td>
            <td>@Html.ActionLink("Изменить", "Edit", "User", new { id = user.Id }, null)</td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Создать нового пользователя", "CreateUser", "User")
</div>
<div>
    @Html.ActionLink("Назад", "Index", "Home")
</div>

